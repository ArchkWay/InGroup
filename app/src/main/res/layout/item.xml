<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        >

        <TextView
            android:id="@+id/tvIdOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="ID_OFFER"
            android:textAlignment="textStart"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNameOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="NAME OFFER"
            android:textAlignment="textStart"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvIdOffer" />

        <TextView
            android:id="@+id/tvDesMinOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="So shorty minimal a litle description"
            android:textAlignment="textStart"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvNameOffer" />

        <ImageView
            android:id="@+id/ivLogoOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/tvDesMinOffer" />

        <TextView
            android:id="@+id/tvUrlOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://...."
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/ivLogoOffer" />

        <Button
            android:id="@+id/btnExp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:text="ПОДРОБНЕЕ"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUrlOffer" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
